{
  "name": "domifa",
  "private": true,
  "version": "2.17.0-alpha.3",
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel --stream",
    "e2e": "yarn --cwd optional/e2e/runners/puppeteer test",
    "k8s": "yarn --silent --cwd .k8s",
    "lint": "lerna run lint --parallel --stream",
    "seal-secrets": "sre-secrets --from=./.secrets.yaml --to=./.k8s",
    "start": "lerna run start --parallel --stream",
    "test": "lerna run test --parallel --stream"
  },
  "devDependencies": {
    "@socialgouv/sre-secrets": "^1.4.0",
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/*",
      "**/@angular/*/**",
      "**/@angular/compiler-cli/*",
      "**/@angular/compiler-cli/**",
      "**/@ngrx/*",
      "**/@ngrx/*/**",
      "**/@angular-builders/*",
      "**/@angular-builders/*/**",
      "**/@angular-devkit/*",
      "**/@angular-devkit/*/**"
    ]
  }
}
